{
  "name": "@valorcss/react",
  "version": "1.0.0",
  "description": "React components for ValorCSS - Modern utility-first CSS framework",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/valorcss.css": "./dist/valorcss.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "style": "dist/styles.css",
  "sideEffects": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/styles.css",
    "dist/valorcss.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "copy-css": "cp ../core/dist/main.css dist/valorcss.css && cp ../core/dist/main.css.map dist/main.css.map",
    "build": "rollup -c && npm run copy-css"
  },
  "keywords": [
    "react",
    "components",
    "valorcss",
    "ui",
    "css-framework",
    "typescript"
  ],
  "author": "Valiant-Joshua Bolorunduro <mail@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:bolorundurovj/ValorCSS.git",
    "directory": "packages/react"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "rollup": "^4.24.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  }
}
