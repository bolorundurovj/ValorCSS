{
  "name": "@valorcss/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "sass packages/core/src/styles/main.scss packages/core/dist/main.css --style=expanded --source-map",
          "sass packages/core/src/styles/main.scss packages/core/dist/main.min.css --style=compressed --no-source-map",
          "cp packages/core/dist/main.css packages/core/public/main.css"
        ],
        "parallel": false
      }
    },
    "build:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sass packages/core/src/styles/main.scss packages/core/dist/main.min.css --style=compressed --no-source-map"
      }
    },
    "build:purge": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "sass packages/core/src/styles/main.scss packages/core/dist/main.min.css --style=compressed --no-source-map",
          "postcss packages/core/dist/main.min.css -o packages/core/dist/main.min.css"
        ],
        "parallel": false
      },
      "dependsOn": ["build:prod"]
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sass --watch packages/core/src/styles/main.scss packages/core/dist/main.css --style=expanded --source-map"
      }
    }
  },
  "tags": ["type:library", "scope:core"]
}
