{
  "name": "valorcss-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "ValorCSS Design System - Monorepo",
  "repository": "git@github.com-bolorundurovj:bolorundurovj/ValorCSS.git",
  "author": "Valiant-Joshua Bolorunduro <mail@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "build:core": "nx build @valorcss/core",
    "build:react": "nx build @valorcss/react",
    "watch:core": "nx watch @valorcss/core",
    "watch:react": "nx watch @valorcss/react",
    "start": "node index.js",
    "start:dev": "nodemon index.js",
    "test": "nx run-many -t test",
    "graph": "nx graph",
    "pack:react": "cd packages/react && npm pack",
    "install:example": "cd react-example && npm uninstall @valorcss/react && npm install ../packages/react/valorcss-react-*.tgz",
    "setup:example": "npm run build:react && npm run pack:react && npm run install:example",
    "dev:example": "cd react-example && npm run dev"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@nx/js": "^22.0.2",
    "express": "^4.20.0",
    "nodemon": "^2.0.22",
    "nx": "^22.0.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.63.6"
  },
  "dependencies": {}
}
